{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDirs": ["src", "__tests__"],
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "sourceMap": true,
    "paths": {
      "@/*": ["*"],
    },
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
